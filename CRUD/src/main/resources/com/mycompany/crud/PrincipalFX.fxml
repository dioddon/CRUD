<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane fx:id="root" prefHeight="550.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.crud.PrincipalFXController" style="-fx-background-color: #f0f2f5;">
    <children>
        <!-- Header con título -->
        <VBox layoutX="0.0" layoutY="0.0" prefHeight="80.0" prefWidth="800.0" style="-fx-background-color: #3498db;">
            <children>
                <Label text="Gestión de Estudiantes" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 24;">
                    <padding>
                        <Insets top="15" left="20" />
                    </padding>
                    <font>
                        <Font name="Arial" size="24.0" />
                    </font>
                </Label>
            </children>
        </VBox>
        
        <!-- Panel de formulario -->
        <VBox layoutX="20.0" layoutY="100.0" prefHeight="400.0" prefWidth="320.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
            <children>
                <Label text="Datos del Estudiante" style="-fx-font-weight: bold; -fx-font-size: 18; -fx-padding: 15 0 15 20; -fx-text-fill: #2c3e50;" />
                
                <VBox spacing="10" style="-fx-padding: 0 20;">
                    <!-- ID -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="ID:" minWidth="80" style="-fx-font-weight: bold; -fx-text-fill: #34495e;" />
                        <TextField fx:id="tfId" prefHeight="35.0" prefWidth="180.0" editable="false" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-padding: 5;" />
                    </HBox>
                    
                    <!-- Nombre -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Nombre:" minWidth="80" style="-fx-font-weight: bold; -fx-text-fill: #34495e;" />
                        <TextField fx:id="tfNombre" prefHeight="35.0" prefWidth="180.0" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-padding: 5;" />
                    </HBox>
                    
                    <!-- Apellidos -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Apellidos:" minWidth="80" style="-fx-font-weight: bold; -fx-text-fill: #34495e;" />
                        <TextField fx:id="tfApellidos" prefHeight="35.0" prefWidth="180.0" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-padding: 5;" />
                    </HBox>
                    
                    <!-- Sexo -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Sexo:" minWidth="80" style="-fx-font-weight: bold; -fx-text-fill: #34495e;" />
                        <ComboBox fx:id="cbsexo" prefHeight="35.0" prefWidth="180.0" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7;" />
                    </HBox>
                    
                    <!-- Botones -->
                    <HBox spacing="15" alignment="CENTER" style="-fx-padding: 25 0 20 0;">
                        <Button fx:id="btnGuardar" text="Guardar" onAction="#guardarUsuario" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 15;">
                            <effect>
                                <DropShadow radius="3" offsetX="2" offsetY="2" color="rgba(0,0,0,0.1)" />
                            </effect>
                        </Button>
                        <Button fx:id="btnEditar" text="Editar" onAction="#editarUsuario" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 15;">
                            <effect>
                                <DropShadow radius="3" offsetX="2" offsetY="2" color="rgba(0,0,0,0.1)" />
                            </effect>
                        </Button>
                        <Button fx:id="btnBorrar" text="Borrar" onAction="#borrarUsuario" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 15;">
                            <effect>
                                <DropShadow radius="3" offsetX="2" offsetY="2" color="rgba(0,0,0,0.1)" />
                            </effect>
                        </Button>
                    </HBox>
                </VBox>
            </children>
        </VBox>
        
        <!-- Panel de tabla -->
        <VBox layoutX="360.0" layoutY="100.0" prefHeight="400.0" prefWidth="420.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
            <children>
                <Label text="Lista de Estudiantes" style="-fx-font-weight: bold; -fx-font-size: 18; -fx-padding: 15 0 15 20; -fx-text-fill: #2c3e50;" />
                <TableView fx:id="tvUsuarios" prefHeight="320.0" prefWidth="400.0" style="-fx-border-radius: 5; -fx-padding: 0 10 10 10;">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="50.0" style="-fx-font-weight: bold; -fx-alignment: CENTER;" />
                        <TableColumn fx:id="colNombre" text="Nombre" prefWidth="120.0" style="-fx-font-weight: bold;" />
                        <TableColumn fx:id="colApellidos" text="Apellidos" prefWidth="150.0" style="-fx-font-weight: bold;" />
                        <TableColumn fx:id="colSexo" text="Sexo" prefWidth="80.0" style="-fx-font-weight: bold; -fx-alignment: CENTER;" />
                    </columns>
                </TableView>
            </children>
        </VBox>
        
        <!-- Footer -->
        <VBox layoutX="0.0" layoutY="520.0" prefHeight="30.0" prefWidth="800.0" style="-fx-background-color: #2c3e50;">
            <children>
                <Label text="© 2023 Sistema de Gestión Estudiantil" style="-fx-text-fill: #ecf0f1; -fx-padding: 5 0 0 20;" />
            </children>
        </VBox>
        
        <!-- Elementos decorativos -->
        <Rectangle layoutX="100.0" layoutY="80.0" width="10.0" height="10.0" fill="#3498db" arcWidth="5.0" arcHeight="5.0" />
        <Rectangle layoutX="130.0" layoutY="80.0" width="10.0" height="10.0" fill="#3498db" arcWidth="5.0" arcHeight="5.0" />
        <Rectangle layoutX="160.0" layoutY="80.0" width="10.0" height="10.0" fill="#3498db" arcWidth="5.0" arcHeight="5.0" />
    </children>
</AnchorPane>
